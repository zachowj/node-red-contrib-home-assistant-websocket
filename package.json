    "vue": "^3.5.27",
    "vuepress": "^2.0.0-rc.26",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint -c .eslintrc.js --fix",
    "*.{css,html,json,md,yaml,yml}": "prettier --write"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "files": [
    "dist/**/*",
    "examples/",
    "resources/"
  ],
  "pnpm": {
    "overrides": {
      "jsonata": "2.1.0"
    }
  }
