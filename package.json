    "prepublishOnly": "gulp build",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zachowj/node-red-contrib-home-assistant-websocket"
  },
  "license": "MIT",
  "keywords": [
    "node-red",
    "home-assistant",
    "home assistant",
    "home automation",
    "websocket"
  ],
